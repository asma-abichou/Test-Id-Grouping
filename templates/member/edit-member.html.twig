{% extends 'base.html.twig' %}
{% block title %}Members{% endblock %}
{% block body %}
    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-xl px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="user"></i></div>
                            Modification Members Test
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main page content-->
    <div class="container-xl px-10 ">
        <div class="row">
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                        <div class="card-body">
                            <form action="{{ path('app_member_edit', {'memberId': memberToEdit.id}) }}" method="POST">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" id="checkActive" type="checkbox" checked="">
                                    <label class="form-check-label" for="checkActive">Actif</label>
                                </div>
                                    <div class="card-body text-center">
                                        <!-- Profile picture image-->
                                        <img class="img-account-profile rounded-circle mb-2" src="{{ asset('dist/assets/img/illustrations/profiles/profile-2.png') }}" alt="" />
                                        <!-- Profile picture help block-->
                                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                                        <!-- Profile picture upload button-->
                                        <button class="btn btn-primary" type="button">Upload new image</button>
                                    </div>

                                <!-- Form Group (username)-->
                                <div class="mb-3">
                                    <label class="small mb-1" for="inputUsername">Nom </label>
                                    <input class="form-control" name="name" id="inputUsername" type="text" placeholder="Enter your username" value="{{ memberToEdit.name }}" />
                                </div>
                                <!-- Form Row-->
                                <div class="row gx-3 mb-3">
                                    <!-- Form Group (first name)-->
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputFirstName">Email</label>
                                        <input class="form-control" name="email" id="inputFirstName" type="text" placeholder="Enter your first name" value="{{ memberToEdit.email }}" />
                                    </div>
                                    <!-- Form Group (last name)-->
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputLastName">Adresse</label>
                                        <input class="form-control" name="address" id="inputLastName" type="text" placeholder="Enter your last name" value="{{ memberToEdit.address }}" />
                                    </div>
                                </div>
                                <!-- Form Row        -->
                                <div class="row gx-3 mb-3">
                                    <!-- Form Group (organization name)-->
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputOrgName">Ville</label>
                                        <input class="form-control" name="city" id="inputOrgName" type="text" placeholder="Enter your organization name" value="{{ memberToEdit.city }}" />
                                    </div>
                                    <!-- Form Group (location)-->
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputLocation">TÃ©lephone</label>
                                        <input class="form-control" name="phone" id="inputLocation" type="text" placeholder="Enter your location" value="" />
                                    </div>
                                </div>
                                <!-- Form Group (email address)-->
                                <div class="mb-3">
                                    <label class="small mb-1" for="inputEmailAddress">Code postal</label>
                                    <input class="form-control" name="postcode" id="inputEmailAddress" type="email" placeholder="Enter your email address" value="{{ memberToEdit.postCode }}" />
                                </div>
                                <!-- Form Row-->
                                <div class="row gx-3 mb-3">
                                    <!-- Form Group (phone number)-->
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputPhone">Pays</label>
                                        <input class="form-control" name="country" id="inputPhone" type="tel" placeholder="Enter your phone number" value="{{ memberToEdit.country }}" />
                                    </div>
                                </div>
                                <!-- Save changes button-->
                                <a class="btn btn-primary" type="submit" href="{{ path('app_member_edit', {'memberId': memberToEdit.id}) }}">Modifier</a>
                                <a class="btn btn-dark" type="button" href="{{ path('app_member') }}">Annuler</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


{% endblock %}